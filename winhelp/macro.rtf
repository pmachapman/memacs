\par {\uldb !IF}{\v .IF}, {\uldb !ELSE}{\v .IF} and {\uldb !ENDIF}{\v .IF}
\par {\uldb !RETURN}{\v .RETURN}
\par \pard \s11\li360\sa120\tx2880 {\uldb !WHILE}{\v .WHILE} and {\uldb !ENDWHILE}{\v .WHILE}
